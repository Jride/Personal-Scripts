alias usedevscripts='source "$DEV_SCRIPTS/Aliases"; source "$ITV_DEV_SCRIPTS/Aliases_Zsh"; export USING_DEV_SCRIPTS="(dev)"; source "$ZSH_CUSTOM/themes/jride.zsh-theme"'
alias uselivescripts='source "$SCRIPTS/Aliases"; source "$ITV_SCRIPTS/Aliases_Zsh"; export USING_DEV_SCRIPTS=""; source "$ZSH_CUSTOM/themes/jride.zsh-theme"'

alias editscripts='edit "$DEV_SCRIPTS" && cd "$DEV_SCRIPTS"'
alias edititvscripts='edit "$ITV_DEV_SCRIPTS" && cd "$ITV_DEV_SCRIPTS"'
